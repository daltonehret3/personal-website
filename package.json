{
  "name": "personal-website",
  "version": "0.1.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "docker:start": "docker compose up -d --build && npm run docker:health",
    "docker:stop": "docker compose down",
    "docker:health": "node --experimental-modules --es-module-specifier-resolution=node ./scripts/healthcheck.js",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .js,.jsx,.tx,.tsx",
    "start": "react-scripts start",
    "test": "npm run lint && npm run coverage",
    "unit": "jest --env=jsdom",
    "verify": "npm run test && npm run docker:start && npm run docker:health && npm run cypress:run"
  },
  "dependencies": {
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-loader-spinner": "5.1.5",
    "react-router-dom": "6.3.0",
    "react-scripts": "5.0.1",
    "styled-components": "5.3.5",
    "web-vitals": "2.1.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.18.9",
    "@babel/plugin-syntax-jsx": "7.18.6",
    "@babel/preset-env": "7.18.10",
    "@babel/preset-react": "7.18.6",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/user-event": "14.4.3",
    "@testing-library/react": "13.2.0",
    "babel-jest": "28.1.3",
    "babel-polyfill": "6.26.0",
    "chance": "1.1.8",
    "cypress": "9.7.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.30.0",
    "frisby": "2.1.3",
    "prettier": "2.8.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
