{
  "name": "personal-website",
  "version": "0.1.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "docker:start": "docker compose up -d --build && npm run docker:health",
    "docker:stop": "docker compose down",
    "docker:health": "node --experimental-modules --es-module-specifier-resolution=node ./scripts/healthcheck.js",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .js,.jsx,.tx,.tsx",
    "start": "react-scripts start",
    "test": "npm run lint && npm run coverage",
    "unit": "jest --env=jsdom",
    "verify": "npm run test && npm run docker:start && npm run docker:health && npm run cypress:run"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-loader-spinner": "5.3.4",
    "react-router-dom": "6.15.0",
    "react-scripts": "5.0.1",
    "styled-components": "5.3.11",
    "web-vitals": "3.4.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.22.10",
    "@babel/plugin-syntax-jsx": "7.22.5",
    "@babel/preset-env": "7.22.10",
    "@babel/preset-react": "7.22.5",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/user-event": "14.4.3",
    "@testing-library/react": "14.0.0",
    "babel-jest": "29.6.4",
    "babel-polyfill": "6.26.0",
    "chance": "1.1.11",
    "cypress": "13.7.1",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.31.11",
    "frisby": "2.1.3",
    "prettier": "3.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
